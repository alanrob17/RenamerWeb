            @Html.DisplayFor(model => model.Photo.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.Folder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.Folder)
        </dd>
