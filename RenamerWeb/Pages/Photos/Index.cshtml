@page
@model RenamerWeb.Pages.Photos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Photos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Photo[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Photo) {
    if (item.Description == null)
    {
           <tr>
            <td>
                <img src="@item.Image" alt="Image" width="50%"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PhotoId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PhotoId">Details</a> |
            </td>
        </tr>
    }
}
    </tbody>
</table>
